{
    "name": "netfuzz",
    "build": {
        "args": {},
        "context": "..",
        "dockerfile": "../Dockerfile"
    },
    "features": {},
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.env.linux": {
                    "TZ": "Asia/Seoul",
                    "LANGUAGE": "en_US.UTF-8",
                    "LANG": "en_US.UTF-8",
                    "LC_ALL": "en_US.UTF-8"
                },
                "docker.languageserver.formatter.ignoreMultilineInstructions": true,
                "editor.bracketPairColorization.enabled": true,
                "editor.fontWeight": "bold",
                "editor.formatOnSave": true,
                "editor.guides.bracketPairs": "active",
                "editor.guides.bracketPairsHorizontal": "active",
                "editor.guides.highlightActiveBracketPair": true,
                "editor.guides.highlightActiveIndentation": true,
                "editor.guides.indentation": true,
                "editor.renderWhitespace": "all",
                "files.exclude": {
                    "**/.git/**": true,
                    "**/.mypy_cache/**": true,
                    "**/__pycache__/**": true
                },
                "files.watcherExclude": {
                    "**/.git/**": true,
                    "**/.mypy_cache/**": true,
                    "**/.venv/**": true,
                    "**/__pycache__/**": true
                },
                "python.analysis.autoFormatStrings": true,
                "python.analysis.autoImportCompletions": true,
                "python.analysis.autoIndent": true,
                "python.analysis.autoSearchPaths": true,
                "python.analysis.diagnosticMode": "workspace",
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.diagnosticSeverityOverrides": {
                    "reportMissingImports": "none",
                    "reportMissingTypeStubs": "none",
                    "reportMissingParameterType": "none"
                },
                "python.languageServer": "Pylance",
                "python.formatting.provider": "black",
                "python.formatting.blackArgs": [
                    "--line-length=188"
                ],
                "python.sortImports.args": [
                    "--profile",
                    "black"
                ],
                "python.defaultInterpreterPath": "/venv/bin/python",
                "python.venvPath": "/venv",
                "python.poetryPath": "/venv/bin/poetry",
                "python.terminal.activateEnvironment": false,
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "always"
                    },
                    "editor.formatOnType": true
                },
                "ruff.codeAction.fixViolation": {
                    "enable": true
                },
                "ruff.importStrategy": "useBundled",
                "ruff.showNotifications": "always",
                "ruff.organizeImports": true,
                "ruff.showSyntaxErrors": true,
                "ruff.logFile": "/netfuzz/.ruff.log",
                "ruff.logLevel": "debug",
                "ruff.trace.server": "messages",
                "ruff.lint.run": "onSave",
                "mypy-type-checker.cwd": "${workspaceFolder}",
                "mypy-type-checker.interpreter": [
                    "/venv/bin/python"
                ],
                "mypy-type-checker.showNotifications": "always"
            },
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "tamasfe.even-better-toml"
            ]
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "-e",
        "TZ=Asia/Seoul",
        "-e",
        "LANG=en_US.UTF-8",
        "-e",
        "LC_ALL=en_US.UTF-8"
    ],
    "remoteUser": "vscode",
    "workspaceFolder": "/netfuzz",
    "workspaceMount": "source=${localWorkspaceFolder},target=/netfuzz,type=bind,consistency=cached"
}